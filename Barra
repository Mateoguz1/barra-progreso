<body>
  <div class="container">
    <h2>Objetivo semanal: $10,000</h2>
    <input type="number" id="monto" placeholder="IngresÃ¡ el cash recolectado..." oninput="actualizarBarra()" />
    <div class="bar">
      <div class="bar-fill" id="barra"></div>
    </div>
    <div class="label" id="label">0%</div>
  </div>

  <script>
    function actualizarBarra() {
      const monto = parseFloat(document.getElementById("monto").value) || 0;
      const objetivo = 10000;
      const porcentaje = Math.min((monto / objetivo) * 100, 100);

      const barra = document.getElementById("barra");
      const label = document.getElementById("label");

      barra.style.width = porcentaje + "%";
      label.textContent = Math.round(porcentaje) + "%";
    }
  </script>
